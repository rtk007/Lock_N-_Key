{
    "manifest_version": 3,
    "name": "Lock N' Key Extension",
    "version": "1.0",
    "description": "Save secrets to your Lock N' Key vault.",
    "permissions": [
        "contextMenus",
        "activeTab",
        "scripting",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Lock N' Key",
        "default_icon": "logo.png"
    },
    "icons": {
        "16": "logo.png",
        "48": "logo.png",
        "128": "logo.png"
    }
}
